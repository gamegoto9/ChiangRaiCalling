<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parentCredit"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton

            android:id="@+id/btnClose"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_marginTop="20dp"

            android:src="@drawable/btn_close"/>

        <ImageView
            android:id="@+id/bgcredit"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_below="@id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:src="@drawable/credit_view"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/parentMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:gravity="bottom|center">
        <ImageButton
            android:id="@+id/btnOffLine"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#00000000"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"

            android:src="@drawable/btnoffline"/>

        <ImageButton
            android:id="@+id/btnCredit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_credit"


            />
        <ImageButton

            android:id="@+id/btnOnline"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingBottom="20dp"
            android:background="#00000000"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/btnonline"
            />
    </LinearLayout>

</RelativeLayout>